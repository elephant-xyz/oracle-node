{
  "name": "oracle-node",
  "private": true,
  "workspaces": [
    "prepare/lambdas/*",
    "workflow/lambdas/*",
    "workflow-events/lambdas/*"
  ],
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "npm run typecheck --workspace=prepare/lambdas/downloader && npm run typecheck --workspace=prepare/lambdas/updater && npm run typecheck --workspace=workflow/lambdas/post && npm run typecheck --workspace=workflow/lambdas/pre && npm run typecheck --workspace=workflow/lambdas/starter && npm run typecheck --workspace=workflow/lambdas/submit && npm run typecheck --workspace=workflow/lambdas/error-resolver && npm run typecheck --workspace=workflow-events/lambdas/event-handler",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "install-workspaces": "npm install --workspaces",
    "query-post-logs": "node scripts/query_post_logs.js",
    "update-elephant-cli": "npm install @elephant-xyz/cli@latest --workspace=prepare/lambdas/downloader --workspace=workflow/lambdas/submit --workspace=workflow/lambdas/pre --workspace=workflow/lambdas/post --workspace=workflow/lambdas/mvl"
  },
  "devDependencies": {
    "@aws-sdk/client-cloudformation": "^3.895.0",
    "@aws-sdk/client-cloudwatch-logs": "^3.895.0",
    "@aws-sdk/client-dynamodb": "^3.895.0",
    "@aws-sdk/client-eventbridge": "^3.879.0",
    "@aws-sdk/client-s3": "^3.879.0",
    "@aws-sdk/client-sfn": "^3.879.0",
    "@aws-sdk/lib-dynamodb": "^3.879.0",
    "@smithy/util-stream": "^4.2.0",
    "@types/node": "^20.16.3",
    "aws-sdk-client-mock": "^4.1.0",
    "aws-sdk-client-mock-vitest": "^7.0.1",
    "chalk": "^4.1.2",
    "esbuild": "0.27.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "vitest": "^4.0.14",
    "yargs": "^18.0.0"
  },
  "dependencies": {
    "commander": "^14.0.1"
  }
}
